    "version": "0.2.0",
    "configurations": [
        {
            "command": "ngrok http 3000",
            "name": "Run NGROK",
            "request": "launch",
            "type": "node-terminal",
            "outputCapture": "std"
        },
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Edformer",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "outputCapture": "std" // Winston doesn't get captured without this
        }
    ]
}